<h1> Snake </h1>

<p id="demo"></p>
<canvas id = "canvas" width="400" height="400">
<script>


let canv = document.getElementById("canvas");
obs = canv.getContext("2d");
obs.scale(20,20);
nahCislo();
addEventListener("keydown", pohyb);
let pole=[[5,5],[6,5]];
lastTime=0
skok=0;
function collide(){
	for (let b = 0;b<pole.length-1;b++){
		if (pole[pole.length-1][0] < 0 || pole[pole.length-1][0] >= canv.width/20 || pole[pole.length-1][1] < 0 || pole[pole.length-1][1] >= canv.width/20 || ( pole[pole.length-1][0] == pole[b][0] && pole[pole.length-1][1] == pole[b][1])){
    		pole=[[5,5],[6,5]];
    		directy=0;
			directx=1;
            nahCislo();
    	}
    }
}
function draw(time=0){
	
	deltaTime=time-lastTime;
    lastTime=time;
    skok += deltaTime;
    obs.fillStyle="black";
	obs.fillRect(0,0,canv.width,canv.height);
	obs.fillStyle="yellow";
	obs.fillRect(nahcislox,nahcisloy,1,1);
    if (skok >= 100){
    	
    	if (nahcislox==pole[pole.length-1][0] && nahcisloy==pole[pole.length-1][1]){
    		pole.push([nahcislox,nahcisloy]);
            nahCislo();
            for (let b = 0;b<pole.length-1;b++){
            	if (nahcislox == pole[b][0] && nahcisloy == pole[b][1]){
                nahCislo();
                }
            }
        }
    	pole.shift();
    	nParameter(directx,directy);        
        skok=0;
    }
    
    collide();
	vykreslenie(pole);
    window.requestAnimationFrame(draw);
}
	
function vykreslenie(suradnice){
	for (let x=0;x<pole.length;x++){
    	for (let y=0;y<1;y++){
        	obs.fillStyle="red";
            obs.fillRect(pole[x][y],pole[x][y+1],0.98,0.98);
        }
        
    }
}

	

directy=0;
directx=1;
draw();
nahcislox;
nahcisloy;
function nahCislo(){
	nahcislox=Math.floor(Math.random()*20);
    nahcisloy=Math.floor(Math.random()*20);
    
}
function pohyb(cvt){
	
    switch (cvt.keyCode){
    	case 37:
        	directx=-1;
            directy=0;
            
            break;
        case 38:
        	directx=0;
            directy=-1;
            break;
        case 39:
        	directx=1;
            directy=0;
            break;
        case 40:
        	directx=0;
            directy=1;
            break;   
            
    }
    
}
function nParameter(x,y){
	let velkost = pole.length-1
	pole.push([pole[velkost][0]+x,pole[velkost][1]+y]);
    
}
</script>

